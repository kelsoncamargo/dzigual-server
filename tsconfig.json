{
  "compilerOptions": {
    "outDir": "./build",
    "rootDir": "./src",
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "types": ["node", "express"],
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
